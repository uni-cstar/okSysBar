<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/translucentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:text="状态栏颜色" />

        <Button
            android:id="@+id/translucentBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:text="状态栏颜色(DarkMode)" />

        <Button
            android:id="@+id/transBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:text="透明状态栏" />

        <Button
            android:id="@+id/transBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:text="透明状态栏（带背景色）" />

        <Button
            android:id="@+id/transBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClick"
            android:text="透明状态栏（带背景色）+DarkMode" />
    </LinearLayout>

</ScrollView>